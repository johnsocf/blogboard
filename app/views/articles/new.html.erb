<div class="container">
	<h1>new post here</h1>

	<%= form_for(@article, html: {multipart: true}) do |f| %>

	    <p>
	        <%= f.label :image, "attach an image" %>
	        <%= f.file_field :image %>
	    </p>
		<p>
			<%= f.label :title %>
			<%= f.text_field :title, :value => current_author.saved_title %>
		</p>
		<p>
			<%= f.label :body %>
			<%= f.text_area :body, :value => current_author.saved_body %>
		</p>

		<p>
			<%= f.submit %>
		</p>
	<% end %>

	<p><%= current_author.name %></p>

</div>