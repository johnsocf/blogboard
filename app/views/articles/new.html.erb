<div class="container">
	<h1>new post here</h1>

	<%= form_for(@article, html: {multipart: true}) do |f| %>

	    <p>
	        <%= f.label :image, "attach an image" %>
	        <%= f.file_field :image %>
	    </p>
		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label :body %>
			<%= f.text_area :body %>
		</p>
		

		<p>
			<%= f.submit %>
		</p>
	<% end %>


</div>